<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Scene xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ac.bali.bom.ui.PartsController">
    <BorderPane>
        <center>
            <VBox alignment="CENTER" prefHeight="332.0" prefWidth="307.0" spacing="20.0">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>

                <Label alignment="TOP_LEFT" prefHeight="18.0" prefWidth="354.0" text="Products" />
                <HBox>
                    <ScrollPane prefHeight="202.0" prefWidth="138.0">
                        <ListView fx:id="parts" prefHeight="200.0" prefWidth="125.0"/>
                    </ScrollPane>
                    <VBox>
                        <Label alignment="TOP_LEFT" prefHeight="18.0" prefWidth="354.0" text="Manufacturer"/>
                        <TextField fx:id="manufacturer"/>
                        <Label alignment="TOP_LEFT" prefHeight="18.0" prefWidth="354.0"
                               text="Manufacturer Part Number"/>
                        <TextField fx:id="mpn"/>
                        <Label alignment="TOP_LEFT" prefHeight="18.0" prefWidth="354.0" text="Alternate Parts"/>
                        <ListView fx:id="alternates" prefHeight="200.0" prefWidth="125.0"/>
                        <HBox>
                            <children>
                                <Button onAction="#onAddAlternateClick" mnemonicParsing="false" text="Add..."/>
                                <Button onAction="#onRemoveAlternateClick" mnemonicParsing="false" text="Remove"/>
                            </children>
                        </HBox>
                    </VBox>
                </HBox>
                <HBox>
                    <children>
                        <Button onAction="#onAddPartClick"  mnemonicParsing="false" text="Add..." />
                        <Button onAction="#onRemovePartClick" mnemonicParsing="false" text="Remove" />
                    </children>
                </HBox>
            </VBox>
        </center>
      <top>
          <fx:include source="navigation.fxml" />
      </top>
    </BorderPane>
</Scene>
